<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference

        android:entries="@array/Languages"
        android:entryValues="@array/languageAlias"
        android:key="@string/language_key"
        android:title="@string/title_change_Language" />
    <ListPreference

        android:defaultValue="1"
        android:entries="@array/Theme"
        android:entryValues="@array/Theme"
        android:key="theme_selection"
        android:title="@string/title_change_Theme" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="set_default_app"
        android:title="@string/title_set_default_app" />

</androidx.preference.PreferenceScreen>